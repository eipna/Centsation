<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:id="@+id/saving_parent"
    app:cardBackgroundColor="?attr/colorSurfaceContainer"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/saving_name"
            android:text="Saving Name"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:ellipsize="end"
            android:textColor="?attr/colorSecondary"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/saving_description"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/saving_value"
                android:text="1000.0"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textview.MaterialTextView
                android:text="out of"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/saving_goal"
                android:text="1000.0"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/saving_percent"
                android:text="(100.0%)"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saving_update"
                    style="?attr/materialIconButtonStyle"
                    app:icon="@drawable/ic_add_circle"
                    app:iconTint="?attr/colorSecondary"
                    android:tooltipText="@string/tooltip_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saving_history"
                    style="?attr/materialIconButtonStyle"
                    app:icon="@drawable/ic_history"
                    app:iconTint="?attr/colorSecondary"
                    android:tooltipText="@string/tooltip_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saving_share"
                    style="?attr/materialIconButtonStyle"
                    app:icon="@drawable/ic_share"
                    app:iconTint="?attr/colorSecondary"
                    android:tooltipText="@string/tooltip_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saving_archive"
                    style="?attr/materialIconButtonStyle"
                    app:icon="@drawable/ic_archive"
                    app:iconTint="?attr/colorSecondary"
                    android:tooltipText="@string/tooltip_archive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saving_unarchive"
                    style="?attr/materialIconButtonStyle"
                    app:icon="@drawable/ic_unarchive"
                    app:iconTint="?attr/colorSecondary"
                    android:tooltipText="@string/tooltip_unarchive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saving_delete"
                    style="?attr/materialIconButtonStyle"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="?attr/colorTertiary"
                    android:tooltipText="@string/tooltip_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/saving_progress"
        android:layout_gravity="bottom"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.google.android.material.card.MaterialCardView>